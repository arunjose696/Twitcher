<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/iocBirdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:text="Bird Name" />

    <TextView
        android:id="@+id/subspecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iocBirdName"
        android:layout_alignStart="@id/iocBirdName"
        android:layout_below="@id/iocBirdName"
        android:text="Subspecies"
        android:layout_marginLeft="15dp"
        android:textColor="@color/mainTextColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subregion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/subspecies"
        android:layout_alignStart="@id/subspecies"
        android:layout_below="@id/subspecies"
        android:text="Subregion"
        android:layout_marginLeft="15dp"
        android:textColor="@color/mainTextColor"
        android:textSize="17sp" />

    <!-- divider line -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="7dp"
        android:src="@color/contentDividerLine" />
</LinearLayout>